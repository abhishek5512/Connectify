<resources>

    <!-- Default App Theme -->
    <style name="Theme.Connectify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Input Style for TextFields -->
    <style name="StyledInput">
        <item name="android:layout_width">match_parent</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="StyledEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorHint">#9E9E9E</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- ðŸ‘‡ Fixed: Single InfoText style -->
    <style name="InfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="RoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
