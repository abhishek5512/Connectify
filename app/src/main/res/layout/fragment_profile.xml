<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_default_profile"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp"
            android:layout_marginTop="24dp"
            android:padding="4dp" />

        <!-- Upload Status -->
        <TextView
            android:id="@+id/tvUploadImageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Change & Remove Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnEditPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Photo"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="#4A90E2"
                android:minHeight="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/btnRemovePhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="#D32F2F"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <!-- Resume Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@drawable/edittext_background">

            <TextView
                android:id="@+id/tvResumeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No file selected"
                android:textColor="#444"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnUploadResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:backgroundTint="#2193b0"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <!-- Resume Upload Status -->
        <TextView
            android:id="@+id/tvUploadResumeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:textStyle="bold" />

        <!-- Remove Resume Button -->
        <Button
            android:id="@+id/btnRemoveResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Resume"
            android:textColor="@android:color/white"
            android:backgroundTint="#E53935"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="20dp"
            android:minHeight="40dp" />

        <!-- Input Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_container_bg"
            android:padding="16dp"
            android:elevation="1dp"
            android:clipToPadding="false"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etName"
                style="@style/StyledInput"
                android:hint="Full Name" />

            <EditText
                android:id="@+id/etAge"
                style="@style/StyledInput"
                android:hint="Age"
                android:inputType="number" />

            <EditText
                android:id="@+id/etQualification"
                style="@style/StyledInput"
                android:hint="Qualification" />

            <EditText
                android:id="@+id/etWorkExperience"
                style="@style/StyledInput"
                android:hint="Work Experience (Years)"
                android:inputType="number" />

            <!-- Gender Spinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Gender"
                android:textColor="#212121"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Skills Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add up to 5 Skills"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/skillsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etSkillInput"
            style="@style/StyledInput"
            android:hint="Enter a skill" />

        <Button
            android:id="@+id/btnAddSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Skill"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:minHeight="40dp" />

        <!-- Save Profile Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#673AB7"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
