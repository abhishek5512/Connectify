<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F9"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/imageCompanyLogo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:contentDescription="Company Logo" />

        <!-- Upload and Remove Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnUploadLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Logo"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="#4A90E2"
                android:minHeight="40dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/btnRemoveLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:backgroundTint="#D32F2F"
                android:minHeight="40dp"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

        <!-- Upload Status -->
        <TextView
            android:id="@+id/tvUploadStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text=""
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:background="@drawable/input_container_bg"
            android:elevation="1dp">

            <!-- Company Name -->
            <EditText
                android:id="@+id/editCompanyName"
                style="@style/StyledInput"
                android:hint="Company Name" />

            <!-- HR Name -->
            <EditText
                android:id="@+id/editHrName"
                style="@style/StyledInput"
                android:hint="HR Name" />

            <!-- Email -->
            <EditText
                android:id="@+id/editEmail"
                style="@style/StyledInput"
                android:hint="Email"
                android:enabled="false" />

            <!-- Contact -->
            <EditText
                android:id="@+id/editContact"
                style="@style/StyledInput"
                android:hint="Contact Number"
                android:inputType="phone" />

            <!-- About Company -->
            <EditText
                android:id="@+id/editAbout"
                style="@style/StyledInput"
                android:hint="About Company"
                android:minLines="4"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- Company Address -->
            <EditText
                android:id="@+id/editAddress"
                style="@style/StyledInput"
                android:hint="Company Address"
                android:inputType="textPostalAddress" />

            <!-- Company Website -->
            <EditText
                android:id="@+id/editWebsite"
                style="@style/StyledInput"
                android:hint="Company Website"
                android:inputType="textUri" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#673AB7"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
