<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 🔙 Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_marginBottom="10dp" />

        <!-- 🏢 Company Logo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCompanyLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Company Logo"
            app:shapeAppearanceOverlay="@style/RoundedImage" />

        <!-- 🏢 Company Name -->
        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="8dp" />

        <!-- 🧑‍💼 HR Name -->
        <TextView
            android:id="@+id/tvHrName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HR: N/A"
            android:textSize="16sp"
            android:textColor="#6A1B9A"
            android:layout_marginTop="4dp" />

        <!-- 📧 Email -->
        <TextView
            android:id="@+id/tvCompanyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: N/A"
            android:textSize="16sp"
            android:textColor="#555555"
            android:autoLink="email"
            android:layout_marginTop="4dp" />

        <!-- ☎ Phone -->
        <TextView
            android:id="@+id/tvCompanyPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: Not Available"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- 📍 Address -->
        <TextView
            android:id="@+id/tvCompanyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: Not Available"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- 🌐 Website -->
        <TextView
            android:id="@+id/tvCompanyWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website: Not Available"
            android:textSize="16sp"
            android:textColor="#1E88E5"
            android:autoLink="web"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp" />

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:layout_marginTop="10dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
